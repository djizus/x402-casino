CASINO_AGENT_NAME=casino-agent
CASINO_AGENT_DESCRIPTION=Casino lobby agent that orchestrates Lucid game rooms
CASINO_AGENT_VERSION=0.3.0
CASINO_AGENT_CARD_URL=http://localhost:4000/.well-known/agent-card.json
DEFAULT_GAME_TYPE=poker

# Optional fallback cards if you do not use the embedded launchers
DEFAULT_ROOM_AGENT_CARD_URL=
DEFAULT_SLOT_ROOM_AGENT_CARD_URL=
DEFAULT_BLACKJACK_ROOM_AGENT_CARD_URL=

# Embedded poker-room launcher
ROOM_AGENT_AUTOSPAWN=true
ROOM_AGENT_WORKDIR=../poker-room-agent
ROOM_AGENT_BIN=bun
ROOM_AGENT_ARGS=run src/index.ts
ROOM_AGENT_PORT_START=4500
ROOM_AGENT_PORT_END=4600

# Embedded slot-room launcher
SLOT_ROOM_AGENT_AUTOSPAWN=true
SLOT_ROOM_AGENT_WORKDIR=../slot-machine-room-agent
SLOT_ROOM_AGENT_BIN=bun
SLOT_ROOM_AGENT_ARGS=run src/index.ts
SLOT_ROOM_AGENT_PORT_START=4700
SLOT_ROOM_AGENT_PORT_END=4800

# Embedded blackjack-room launcher
BLACKJACK_ROOM_AGENT_AUTOSPAWN=true
BLACKJACK_ROOM_AGENT_WORKDIR=../blackjack-room-agent
BLACKJACK_ROOM_AGENT_BIN=bun
BLACKJACK_ROOM_AGENT_ARGS=run src/index.ts
BLACKJACK_ROOM_AGENT_PORT_START=4800
BLACKJACK_ROOM_AGENT_PORT_END=4900

# Poker defaults
POKER_STARTING_STACK=1
POKER_SMALL_BLIND=0.1
POKER_BIG_BLIND=1
POKER_MIN_BUY_IN=0.1
POKER_MAX_BUY_IN=1
POKER_MAX_HANDS=1
POKER_MAX_SEATS=6

# Slot defaults
SLOT_MAX_PLAYERS=4
SLOT_MAX_SPINS=20
SLOT_SPIN_COST=1
SLOT_PAIR_MULTIPLIER=3
SLOT_JACKPOT_MULTIPLIER=25
SLOT_REELS=3

# Blackjack defaults
BLACKJACK_MAX_PLAYERS=4
BLACKJACK_STARTING_STACK=20
BLACKJACK_MIN_BET=1
BLACKJACK_MAX_BET=5
BLACKJACK_BLACKJACK_PAYOUT=1.5
BLACKJACK_ROUNDS=5
BLACKJACK_DECKS=4

# Server
PORT=4000
